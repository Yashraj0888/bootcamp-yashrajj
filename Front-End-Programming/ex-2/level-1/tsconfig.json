{
    "compilerOptions": {
      "target": "es6",                          // ECMAScript 6 target
      "module": "commonjs",                     // Module system
      "strict": true,                           // Enable strict type-checking
      "esModuleInterop": true,                  // Interoperability with CommonJS
      "skipLibCheck": true,                     // Skip checking declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
      "outDir": "./dist",                       // Directory for compiled JS
      "resolveJsonModule": true                 // Enable importing JSON files
    },
    "include": ["*.ts"],  // Include all TypeScript files in the root folder
    "exclude": ["node_modules"]  // Exclude the 'node_modules' folder
  }
  